<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#5AC8FA"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/mime_topic_center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/mime_banner_item_bg"
        android:layout_weight="1">
        <ImageView
            android:src="@drawable/icon_mine_topic"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/topic_center"
            android:layout_marginBottom="4dp"
            android:layout_width="22dp"
            android:layout_height="22dp" />
        <TextView
            android:id="@+id/topic_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/my_topic"
            android:layout_marginBottom="4dp"
            android:textColor="#fff"
            android:textSize="12dp" />
    </RelativeLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:background="#fff" />

    <RelativeLayout
        android:id="@+id/mime_my_task"
        android:layout_width="0dp"
        android:background="@drawable/mime_banner_item_bg"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:src="@drawable/icon_mine_campustask"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/mytask"
            android:layout_marginBottom="4dp"
            android:layout_width="22dp"
            android:id="@+id/iv_mytask"
            android:layout_height="22dp" />
        <TextView
            android:id="@+id/mytask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="我的任务"
            android:layout_marginBottom="4dp"
            android:textColor="#fff"
            android:textSize="12dp" />
    </RelativeLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:background="#fff" />

    <RelativeLayout
        android:id="@+id/mine_my_order"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/mime_banner_item_bg"
        android:layout_weight="1">
        <ImageView
            android:src="@drawable/icon_mine_order"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/my_order"
            android:layout_marginBottom="4dp"
            android:layout_width="22dp"
            android:layout_height="22dp" />

        <TextView
            android:id="@+id/my_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:text="我的订单"
            android:textColor="#fff"
            android:textSize="12dp" />
    </RelativeLayout>
</LinearLayout>