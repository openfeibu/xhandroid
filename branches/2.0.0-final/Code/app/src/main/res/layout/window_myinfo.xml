<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/white">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/onclick_background"
            android:paddingLeft="@dimen/margin_normal"
            android:paddingRight="@dimen/margin_normal"
            android:src="@mipmap/icon_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/font_most"
            android:textColor="@color/black"
            android:text="@string/myinfo"/>
    </RelativeLayout>

    <View
        style="@style/horizontalLine"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_height"
            android:background="@drawable/onclick_background"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_normal">

            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_large"
                android:text="@string/myinfo_head"/>

            <ImageView
                android:padding="@dimen/margin_small"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_fillinfo"/>

            <cn.flyexp.view.CircleImageView
                android:id="@+id/img_avatar"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_large"
                android:layout_width="@dimen/avatar_normal"
                android:layout_height="@dimen/avatar_normal"
                android:src="@mipmap/icon_defaultavatar_small"/>
        </RelativeLayout>
        <View
        style="@style/horizontalLine"
        android:layout_alignParentBottom="true" />

        <RelativeLayout
            android:id="@+id/rl_nickname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_height"
            android:background="@drawable/onclick_background"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_normal">

            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_large"
                android:text="@string/hint_nickname"/>

            <ImageView
                android:padding="@dimen/margin_small"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_fillinfo"/>

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_large"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_normal"/>
        </RelativeLayout>
        <View
            style="@style/horizontalLine"
            android:layout_alignParentBottom="true" />

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
            android:background="@drawable/onclick_background"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_normal">

        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_large"
            android:text="@string/name"/>

        <ImageView
            android:padding="@dimen/margin_small"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_fillinfo"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/font_normal"/>
    </RelativeLayout>

    <View
        style="@style/horizontalLine"
        android:layout_alignParentBottom="true" />
    <RelativeLayout
        android:id="@+id/rl_gender"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:background="@drawable/onclick_background"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_normal">

        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_large"
            android:text="@string/gender"/>

        <ImageView
            android:padding="@dimen/margin_small"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_fillinfo"/>

        <TextView
            android:id="@+id/tv_gender"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="@dimen/font_normal"/>
    </RelativeLayout>
    <View
        style="@style/horizontalLine"
        android:layout_alignParentBottom="true" />

    <RelativeLayout
        android:id="@+id/rl_fillinfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:background="@drawable/onclick_background"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_normal">

        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_large"
            android:text="@string/myinfo_intro"/>

        <ImageView
            android:padding="@dimen/margin_small"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_fillinfo"/>

        <TextView
            android:id="@+id/tv_intro"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="@dimen/font_normal"/>
        </RelativeLayout>

    </LinearLayout>




    <LinearLayout
        android:layout_marginTop="@dimen/margin_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_certification"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:background="@drawable/onclick_background"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_normal">

        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_large"
            android:text="@string/certification"/>

        <ImageView
            android:padding="@dimen/margin_small"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_fillinfo"/>

        <TextView
            android:id="@+id/tv_certification"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="@dimen/font_normal"/>
    </RelativeLayout>
    <View
        style="@style/horizontalLine"
        android:layout_alignParentBottom="true" />

    <View
        style="@style/horizontalLine"
        android:layout_alignParentBottom="true" />

    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:background="@drawable/onclick_background"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_normal">

        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_large"
            android:text="@string/hint_phone_number"/>

        <ImageView
            android:padding="@dimen/margin_small"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_fillinfo"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="@dimen/font_normal"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:background="@drawable/onclick_background"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_normal">

        <ImageView
            android:padding="@dimen/margin_small"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_fillinfo"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_normal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_large"
            android:text="@string/hint_address"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/textView" />
    </RelativeLayout>

    <View
        style="@style/horizontalLine"
        android:layout_alignParentBottom="true" />
    </LinearLayout>

</LinearLayout>
