<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activitylayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/onclick_background"
            android:paddingLeft="@dimen/margin_normal_small"
            android:paddingRight="@dimen/margin_normal_small"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/assn_activity_publish"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_most" />

        <View
            style="@style/horizontalLine"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <EditText
        android:id="@+id/edt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@drawable/background_gray_round_border"
        android:gravity="center_vertical"
        android:hint="@string/title"
        android:maxLength="15"
        android:padding="@dimen/margin_small"
        android:singleLine="true"
        android:textColor="@color/font_dark"
        android:textColorHint="@color/font_light"
        android:textSize="@dimen/font_normal" />

    <EditText
        android:id="@+id/edt_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_height_large"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@drawable/background_gray_round_border"
        android:gravity="left|top"
        android:hint="@string/content"
        android:maxLength="250"
        android:maxLines="10"
        android:padding="@dimen/margin_small"
        android:textColor="@color/font_dark"
        android:textColorHint="@color/font_light"
        android:textSize="@dimen/font_normal" />

    <EditText
        android:id="@+id/edt_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/place"
        android:minWidth="@dimen/assn_acti_publish_input_minwidth"
        android:padding="@dimen/margin_small"
        android:singleLine="true"
        android:textColor="@color/font_dark"
        android:textColorHint="@color/font_light"
        android:textSize="@dimen/font_normal" />

    <View
        style="@style/horizontalLine"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_small"
        android:text="@string/assn_activity_date"
        android:textColor="@color/font_light"
        android:textSize="@dimen/font_normal" />

    <View
        style="@style/horizontalLine"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_add" />

        <ImageView
            android:id="@+id/img_photo"
            android:layout_width="@dimen/avatar_big"
            android:layout_height="@dimen/avatar_big"
            android:layout_marginLeft="@dimen/margin_normal" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginBottom="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:alpha="0.5"
        android:background="@drawable/btn_blue_round"
        android:enabled="false"
        android:text="@string/assn_publish_activity"
        android:textColor="@drawable/font_white_gray"
        android:textSize="@dimen/font_large" />

</LinearLayout>