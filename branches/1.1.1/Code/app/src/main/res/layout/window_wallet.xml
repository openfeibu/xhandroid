<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/headview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:layout_marginTop="@dimen/status_bar_height"
        android:background="@color/light_blue">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_normal"
            android:background="@drawable/btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/mywallet"
            android:textColor="@color/white"
            android:textSize="@dimen/font_most" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mywallet_height"
        android:background="@color/light_blue"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:gravity="center"
            android:text="@string/hint_money"
            android:textColor="@color/white"
            android:textSize="@dimen/font_large" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center"
            android:text="0.00"
            android:textColor="@color/white"
            android:textSize="@dimen/font_very_large" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_withdrawal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_select_height"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@drawable/btn_white"
        android:paddingLeft="@dimen/margin_normal"
        android:paddingRight="@dimen/margin_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/withdrawal"
            android:textColor="@color/font_dark"
            android:textSize="@dimen/font_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_fillinfo" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_select_height"
        android:layout_marginTop="@dimen/margin_least"
        android:background="@drawable/btn_white"
        android:paddingLeft="@dimen/margin_normal"
        android:paddingRight="@dimen/margin_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/wallet_detail"
            android:textColor="@color/font_dark"
            android:textSize="@dimen/font_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_fillinfo" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_payinfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_select_height"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@drawable/btn_white"
        android:paddingLeft="@dimen/margin_normal"
        android:paddingRight="@dimen/margin_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/payaccount_info"
            android:textColor="@color/font_dark"
            android:textSize="@dimen/font_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_fillinfo" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_setpaypwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_select_height"
        android:layout_marginTop="@dimen/margin_least"
        android:background="@drawable/btn_white"
        android:paddingLeft="@dimen/margin_normal"
        android:paddingRight="@dimen/margin_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/set_paypwd"
            android:textColor="@color/font_dark"
            android:textSize="@dimen/font_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_fillinfo" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_changepwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_select_height"
        android:layout_marginTop="@dimen/margin_least"
        android:background="@drawable/btn_white"
        android:paddingLeft="@dimen/margin_normal"
        android:paddingRight="@dimen/margin_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/change_paypwd"
            android:textColor="@color/font_dark"
            android:textSize="@dimen/font_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_fillinfo" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_resetpaypwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_select_height"
        android:layout_marginTop="@dimen/margin_least"
        android:background="@drawable/btn_white"
        android:paddingLeft="@dimen/margin_normal"
        android:paddingRight="@dimen/margin_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/reset_paypwd"
            android:textColor="@color/font_dark"
            android:textSize="@dimen/font_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_fillinfo" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_statement"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_select_height"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@drawable/btn_white"
        android:paddingLeft="@dimen/margin_normal"
        android:paddingRight="@dimen/margin_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/wallet_statement"
            android:textColor="@color/font_dark"
            android:textSize="@dimen/font_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_fillinfo" />

    </RelativeLayout>

</LinearLayout>