<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:xyl="http://schemas.android.com/apk/res/cn.flyexp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <cn.flyexp.view.RoundImageView
                android:id="@+id/shopbg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/default_bg"
                xyl:borderRadius="10dp"
                xyl:type="round" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_shopname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:text="儿童劫零售零售店儿童劫零"
                    android:textColor="@color/light_blue"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_introduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:maxLength="30"
                    android:maxLines="3"
                    android:text="主营：儿童劫零售零售店儿童零售零售店儿童劫零售零售店儿童劫劫零"
                    android:textColor="@color/font_brown_dark"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_viewnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="逛逛 2，100"
                        android:textColor="@color/font_brown_light"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_collect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="收藏 2，100"
                        android:textColor="@color/light_orange"
                        android:textSize="14sp" />

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="@color/app_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:text="儿童用品，交换机，路由器，网线"
            android:textColor="@color/light_blue"
            android:textSize="14sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>