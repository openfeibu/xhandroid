<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/light_blue">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:text="@string/task_info"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <LinearLayout
                    android:id="@+id/task_top_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发单人："
                            android:textColor="#555555"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/sender_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="可乐鸡翅"
                            android:textColor="#555555"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="赏金："
                            android:textColor="#555555"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/account_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1元"
                            android:textColor="#EF7272"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="32dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="到达地点："
                            android:textColor="#555555"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/receive_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="风光路393号"
                            android:textColor="#555555"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/contact"
                    android:layout_width="65dp"
                    android:layout_height="33dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="32dp"
                    android:background="@drawable/btn_task_round"
                    android:text="联系TA"
                    android:textColor="#5AC8FA" />

                <RelativeLayout
                    android:id="@+id/state_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/task_top_message"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:id="@+id/send_order_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/send_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:drawableTop="@drawable/icon_selected_green"
                            android:gravity="center_horizontal"
                            android:text="发单"
                            android:textColor="#67B489"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/send_order_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/progresstime"
                            android:gravity="center"
                            android:paddingTop="8dp"
                            android:text="8-21 12:26"
                            android:textColor="#fff"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/lineOne"
                        android:layout_width="51dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="-18dp"
                        android:layout_toRightOf="@id/send_order_container"
                        android:src="@drawable/progressbar_gg" />

                    <LinearLayout
                        android:id="@+id/receive_order_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-18dp"
                        android:layout_toRightOf="@id/lineOne"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/receive_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:drawableTop="@drawable/icon_prompt_gray"
                            android:gravity="center_horizontal"
                            android:text="接单"
                            android:textColor="#E6E6E6"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/receive_order_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/progresstime"
                            android:gravity="center"
                            android:paddingTop="8dp"
                            android:text="8-21 12:26"
                            android:textColor="#fff"
                            android:textSize="10dp"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/line_two"
                        android:layout_width="51dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="-18dp"
                        android:layout_toRightOf="@id/receive_order_container"
                        android:src="@drawable/progressbar_gray" />

                    <LinearLayout
                        android:id="@+id/finish_order_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-18dp"
                        android:layout_toRightOf="@id/line_two"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/finish_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:drawableTop="@drawable/icon_prompt_gray"
                            android:gravity="center_horizontal"
                            android:text="完成"
                            android:textColor="#E6E6E6"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/finish_order_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/progresstime"
                            android:gravity="center"
                            android:paddingTop="8dp"
                            android:text="8-21 12:26"
                            android:textColor="#fff"
                            android:textSize="10dp"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/line_three"
                        android:layout_width="51dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="-18dp"
                        android:layout_toRightOf="@id/finish_order_container"
                        android:src="@drawable/progressbar_gray" />

                    <LinearLayout
                        android:id="@+id/account_order_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-18dp"
                        android:layout_toRightOf="@id/line_three"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/account_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:drawableTop="@drawable/icon_prompt_gray"
                            android:gravity="center_horizontal"
                            android:text="结算"
                            android:textColor="#E6E6E6"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/account_order_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/progresstime"
                            android:gravity="center"
                            android:paddingTop="8dp"
                            android:text="8-21 12:26"
                            android:textColor="#fff"
                            android:textSize="10dp"
                            android:visibility="invisible" />
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/ed_send_content"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_below="@id/state_bar"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/layout_edt_background"
                    android:ellipsize="end"
                    android:hint="我要吃可乐鸡翅。"
                    android:lines="8"
                    android:padding="8dp"
                    android:textColor="#aaa"
                    android:textSize="14dp" />

            </RelativeLayout>

            <Button
                android:id="@+id/submit_order"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/btn_green_task"
                android:gravity="center"
                android:text="确认送达"
                android:textColor="#fff"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>