<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="8dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_qq"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/icon_share_qq"
            android:gravity="center"
            android:text="QQ好友"
            android:textColor="@color/font_brown_light"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_wxf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/icon_share_wechat"
            android:gravity="center"
            android:text="微信好友"
            android:textColor="@color/font_brown_light"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_wxq"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/icon_share_circleoffriend"
            android:gravity="center"
            android:text="朋友圈"
            android:textColor="@color/font_brown_light"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>