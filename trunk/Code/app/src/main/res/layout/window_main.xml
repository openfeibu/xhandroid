<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <cn.flyexp.view.NoSlidingViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/common_view_bg"
            android:id="@+id/tv_campus_root"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_campus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@mipmap/icon_campus_sel"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="@string/campus"
                android:textColor="@color/light_blue"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/tv_campus_tip"
                android:src="@drawable/red_point"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/tv_task_root"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/common_view_bg"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            >

            <TextView
                android:id="@+id/tv_task"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@mipmap/icon_campustask_nor"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="@string/task"
                android:textColor="@color/font_brown_dark"
                android:textSize="12sp" />
            <ImageView
                android:id="@+id/tv_task_tip"
                android:src="@drawable/red_point"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/common_view_bg"
            android:id="@+id/tv_topic_root"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            >
            <TextView
                android:id="@+id/tv_topic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:drawableTop="@mipmap/icon_topic_nor"
                android:gravity="center"
                android:text="@string/topic"
                android:textColor="@color/font_brown_dark"
                android:textSize="12sp" />
            <ImageView
                android:id="@+id/tv_topic_tip"
                android:src="@drawable/red_point"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/common_view_bg"
            android:id="@+id/tv_shop_root"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            >

            <TextView
                android:id="@+id/tv_shop"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@mipmap/icon_store_nor"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="@string/shop"
                android:textColor="@color/font_brown_dark"
                android:textSize="12sp" />
            <ImageView
                android:id="@+id/tv_shop_tip"
                android:src="@drawable/red_point"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/common_view_bg"
            android:id="@+id/tv_mine_root"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            >
            <TextView
                android:id="@+id/tv_mine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@mipmap/icon_mine_nor"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="@string/mine"
                android:textColor="@color/font_brown_dark"
                android:textSize="12sp" />
            <ImageView
                android:id="@+id/tv_mine_tip"
                android:src="@drawable/red_point"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>